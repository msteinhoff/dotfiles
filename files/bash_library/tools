# Common aliases
alias c="clear"
alias ll="ls -alh"

# OS X aliases
alias dr="defaults read"
alias refresh-mcx="sudo mcxrefresh -n $USER"
alias rebuild-ls="/System/Library/Frameworks/CoreServices.framework/Versions/A/Frameworks/LaunchServices.framework/Support/lsregister -kill -r -domain local -domain system -domain user"
alias flush-dns="dscacheutil -flushcache"
alias startcisco="sudo kextload /System/Library/Extensions/CiscoVPN.kext"
alias cdvmware="cd '/Library/Application Support/VMware Fusion'"
alias delete-dsstore="find . -name '.DS_Store' -delete"
alias caba="ant clean_all build_all"

echo "Shortcuts: dr refresh-mcx rebuild-ls flush-dns cdvmware delete-dsstore caba"

APP_SUBLIME="$DEV/Sublime Text 2.app/Contents/SharedSupport"
ADDPATH="$ADDPATH:$APP_SUBLIME/bin"
